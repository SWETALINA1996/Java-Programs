<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   
 <bean id="mobile" class="com.bridgelabz.springprograms.Mobile">  
<property name="model" value="Redmi"></property> 
<property name="id" value="4"></property>
<property name="SimCard" ref = "sim"></property>
  
 </bean>
 
 <bean id="sim" class="com.bridgelabz.springprograms.SimCard">  
<property name="name" value="Reliance"></property> 
<property name="number" value="9110697579"></property>

</bean>

<bean id = "mobilebean" class = "com.bridgelabz.springprograms.Mobile" init-method="init" destroy-method="destroy">
 <constructor-arg value = "Nokia"></constructor-arg>
 <constructor-arg value = "2500"></constructor-arg>
 <constructor-arg ref = "simbean"> </constructor-arg>
 </bean>
 
 <bean id = "simbean" class = "com.bridgelabz.springprograms.SimCard">
 <constructor-arg value = "BSNL"></constructor-arg>
 <constructor-arg value = "9110697579"></constructor-arg>
 </bean>


</beans>